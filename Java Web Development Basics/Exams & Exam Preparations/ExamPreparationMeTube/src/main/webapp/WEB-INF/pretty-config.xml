<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="index">
        <pattern value="/"/>
        <view-id value="/faces/jsf/index.xhtml"/>
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/home"/>
        <view-id value="/faces/jsf/home.xhtml"/>
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/faces/jsf/login.xhtml"/>
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register"/>
        <view-id value="/faces/jsf/register.xhtml"/>
    </url-mapping>

    <url-mapping id="details">
        <pattern value="/tubes/details"/>
        <view-id value="/faces/jsf/details.xhtml"/>
        <query-param name="id">#{tubeDetailsBean.tubeViewModel.id}</query-param>
    </url-mapping>

    <url-mapping id="upload">
        <pattern value="/tubes/upload"/>
        <view-id value="/faces/jsf/upload.xhtml"/>
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/profile"/>
        <view-id value="/faces/jsf/profile.xhtml"/>
        <query-param name="id">#{userViewBean.userViewModel.id}</query-param>
    </url-mapping>

</pretty-config>